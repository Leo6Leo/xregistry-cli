{%- set schema = root -%}
{%- set namespace = project_name | pascal -%}
{
    "namespace": "{{ namespace | lower() }}",
    {%- for attr, value in schema.items() %}
    {%- if attr != 'namespace' %}
    "{{ attr }}": {{ value | tojson(3) }}{%- if not loop.last %},{% endif %}
    {%- endif %}
    {%- endfor %}
}
{%- set messagegroups = root.messagegroups -%}
{%- set function_name = project_name | pascal -%}

{%- import "cloudevents.jinja.include" as cloudEvents -%}

using Azure.Messaging;
using System.Collections.Generic;
using System;
using System.Linq;
using System.Threading.Tasks;
using System.Threading;
using Microsoft.Azure.WebJobs;
using Microsoft.Azure.WebJobs.Extensions.EventGrid;
using Microsoft.Extensions.Logging;
using Microsoft.Extensions.Configuration;

namespace {{ project_name | pascal }}
{
    {%- set class_name = (project_name | pascal | concat_namespace)+"Base" %}
    public class {{ class_name }}
    {
        {{ cloudEvents.DeclareDispatchObjects( project_name, class_name, messagegroups) | indent(8) }}
        
        public async Task Run(CloudEvent cloudEvent, ILogger log)
        {
            {{ cloudEvents.DispatchToDispatchObjects( "cloudEvent", messagegroups, "log" ) | indent(12) }}
        }
    }
}
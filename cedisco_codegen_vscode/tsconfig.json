{
    "compilerOptions": {
        "target": "es6",
        "outDir": "./out",
        "rootDir": "./src",
        "strict": true,
        "esModuleInterop": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "sourceMap": true
    },
    "include": [
        "./src/**/*",
        "./themes/**/*",
        "./schemas/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}

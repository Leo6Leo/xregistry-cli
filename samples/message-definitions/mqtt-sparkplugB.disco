            "type": "endpoint",
            "id": "Eclipse.SparkplugBv10DeviceConsumer",
            "description": "This declaration is for the endpoint from which an Sparkplug B v1.0 device consumes messages",
            "usage": "consumer",
            "config": {
                "protocol": "MQTT",
                "strict": false,
                "endpoints": [],

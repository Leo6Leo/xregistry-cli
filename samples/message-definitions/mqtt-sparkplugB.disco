                            "qos": {
                                "type": "integer",
                                "value": 0
                            },
                            "retain": {
                                "type": "boolean",
                                "value": false
                            }
                        }
                    },
                    "schemaurl": "#/schemagroups/Sparkplug/schemas/SparkplugB.Protobuf/versions/v1.0:Payload"
                },
                "NDEATH": {
                    "type": "mqtt",
                    "id": "NDEATH",
                    "description": "Death certificate for Sparkplug Edge Nodes",
                    "format": "MQTT/3.1.1",
                    "metadata": {
                        "properties": {
                            "topic": {
                                "type": "uritemplate",
                                "value": "spBv1.0/{group_id}/NDEATH/{edge_node_id}"
                            },
                            "qos": {
                                "type": "integer",
                                "value": 0
                            },
                            "retain": {
                                "type": "boolean",
                                "value": false
                            },
                            "will_message": {
                                "type": "boolean",
                                "value": true
                            }
                        }
                    },
                    "schemaurl": "#/schemagroups/Sparkplug/schemas/SparkplugB.Protobuf/versions/v1.0:Payload"

            "description": "Eclipse Sparkplug Schema Group",
            "schemas": {
                "SparkplugB.JSON": {
                    "id": "SparkplugB.JSON",
                    "type": "schema",
                    "description": "Eclipse Sparkplug B JSON Messages",
                    "format": "JsonSchema/draft-07",
                    "versions": {
                        "v1.0": {
                            "id": "v1.0",
                            "description": "Eclipse Sparkplug B JSON Messages Version 1.0",
                            "type": "schemaversion",
                            "format": "JSON/1.0",
                            "schema": {
                                "$schema": "http://json-schema.org/draft-07/schema#",
                                "$id": "https://raw.githubusercontent.com/Cirrus-Link/Sparkplug/master/sparkplug_b/sparkplug_b.json",
                                "title": "Sparkplug B JSON Messages",
                                "description": "Sparkplug B JSON Messages",
                                "definitions": {
                                    "STATE": {
                                        "type": "object",
                                        "properties": {
                                            "state": {
                                                "type": "string",
                                                "enum": [
                                                    "online",
                                                    "offline"
                                                ]
                                            },
                                            "timestamp": {
                                                "type": "integer"
                                            }
                                        },
                                        "required": [
                                            "state",
                                            "timestamp"
                                        ]
                                    },
                                    "STATEDeath": {
                                        "allOf": [
                                            {
                                                "$ref": "#/definitions/STATE"
                                            },
                                            {
                                                "properties": {
                                                    "state": {
                                                        "enum": [
                                                            "offline"
                                                        ]
                                                    }
                                                }
                                            }
                                        ]
                                    },
                                    "STATEBirth": {
                                        "allOf": [
                                            {
                                                "$ref": "#/definitions/STATE"
                                            },
                                            {
                                                "properties": {
                                                    "state": {
                                                        "enum": [
                                                            "online"
                                                        ]
                                                    }
                                                }
                                            }
                                        ]
                                    }
                                }
                            }
                        }
                    },
                    "SparkplugB.Protobuf": {
